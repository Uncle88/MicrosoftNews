<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="MicrosoftNews.Views.LoginView">
	<ContentPage.Content>
    <StackLayout BackgroundColor="#FADBD8" VerticalOptions="StartAndExpand">
            <Entry Text="{Binding Login}" HorizontalOptions="CenterAndExpand" Margin="5,50,5,15" VerticalOptions="StartAndExpand" TextColor="#FA0800" BackgroundColor="#00FAEB" Placeholder="Enter the Login" FontSize="30" Opacity="0.5" Keyboard="Text" />
            <Entry Text="{Binding Password}" HorizontalOptions="CenterAndExpand" Margin="5,15,5,15" VerticalOptions="StartAndExpand" TextColor="#FA0800" BackgroundColor="#00FAEB" Placeholder="Enter the Password" FontSize="30" Opacity="0.5" Keyboard="Text" />
            <Button Command="{Binding ClickCommand}" Text="LOGIN" TextColor="#002DFA" FontSize="30" Margin="5,25,5,350" HorizontalOptions="CenterAndExpand" BorderRadius="5" VerticalOptions="StartAndExpand" BackgroundColor="#FA0066" />
        </StackLayout>
	</ContentPage.Content>
</ContentPage>
